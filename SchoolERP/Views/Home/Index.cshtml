
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Akron | Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/assets/js/login/backgroundSlideshow/css/backgroundSlideshow.css" />
    <link href="~/Content/assets/js/login/logins/css/login.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <!--begin::Global Theme Styles -->
    <link href="~/Content/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <!--RTL version:<link href="assets/vendors/base/vendors.bundle.rtl.css" rel="stylesheet" type="text/css" />-->
    <link href="~/Content/assets/demo/demo12/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" type="text/css" />

    <script src="~/Content/assets/js/login/backgroundSlideshow/js/modernizr.custom.js"></script>
</head>
<body ng-app="ERP">
    @using System.Configuration;
    <div class="main">
        <ul id="cbp-bislideshow" class="cbp-bislideshow">
            <li><img src="~/Content/assets/images/1.jpg" alt="image01" /></li>
            <li><img src="~/Content/assets/images/2.jpg" alt="image01" /></li>
        </ul>
    </div>
    <div class="limiter" ng-controller="LoginController">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-43">
                        <img class="img-fluid" src="~/Content/assets/images/webesk_logo.png" alt="">
                    </span>

                    <div class="form-group m-form__group m--margin-top-50">
                        <input class="form-control m-input form-control-lg" type="text"  id="username" ng-model="User.UserName" placeholder="Username" autocomplete="off" required>
                    </div>
                    <div class="form-group m-form__group">
                        <input class="form-control m-input  form-control-lg" type="password"  id="password" ng-model="User.Password" placeholder="Password" autocomplete="off" required>
                    </div>

                    <div class="form-group m-form__group justify-content-end">
                        <div class="row m-0 justify-content-end">
                            <a href="~/Home/ForgetPass" class="txt1">
                                Forgot Password?
                            </a>
                        </div>

                    </div>

                    <div class="form-group m-form__group m--margin-top-20">
                        <button class="btn btn-primary btn-lg btn-block" ng-click="ValidateUser()">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-46 p-b-20">
                        <span class="txt2">
                            Copyright &copy;2018 Akron Systems Pvt Ltd.
                        </span>
                    </div>

                    @*<div class="login100-form-social flex-c-m">
                            <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                                <i class="fa fa-facebook-f" aria-hidden="true"></i>
                            </a>

                            <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                        </div>*@
                </form>

            </div>

        </div>
    </div>
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/Login/LoginModule.js")"></script>
    <script src="@Url.Content("~/Scripts/CommonScript/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScripts/Login/LoginController.js")" type="text/javascript"></script>

    <script src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/assets/plugins/popper.js/dist/umd/popper.min.js" type="application/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrap/dist/js/bootstrap.min.js" type="application/javascript"></script>

    <script src="~/Content/assets/js/login/backgroundSlideshow/js/jquery.imagesloaded.min.js"></script>
    <script src="~/Content/assets/js/login/backgroundSlideshow/js/cbpBGSlideshow.min.js"></script>
    <script src="~/Content/assets/js/login/logins/js/login.js" type="text-javascript"></script>

    <!--begin::Global Theme Bundle -->
    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Content/assets/demo/demo12/base/scripts.bundle.js" type="text/javascript"></script>
    
    <script>
        $(function () {
            cbpBGSlideshow.init();
        });
    </script>
</body>
</html>