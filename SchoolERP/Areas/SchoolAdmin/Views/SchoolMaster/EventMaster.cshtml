            <!-- END: Subheader -->
            <div class="m-content">
                <div ng-show="IsVisible">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--begin::Portlet-->
                            <div class="m-portlet m-portlet--accent m-portlet--head-solid-bg m-portlet--head-sm" m-portlet="true" id="m_portlet_tools_1">
                                <div class="m-portlet__head">
                                    <div class="m-portlet__head-caption">
                                        <div class="m-portlet__head-title">
                                            <h3 class="m-portlet__head-text">
                                                Event Master
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="m-portlet__head-tools">
                                        <ul class="m-portlet__nav">
                                            <li class="m-portlet__nav-item">
                                                <a href="#" m-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon"><i class="la la-angle-down"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row d-block m-0 mt-1 form-block-wrapper">

                                    @*<form class="m-form m-form--fit m-form--label-align-right">*@
                                    <div class="m-portlet__body">
                                        <div class="form-group m-form__group row" ng-init="GetEvent()">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Event Type<span class="required-star">*</span></label>
                                            <div class="col-xl-6">
                                                <select class="form-control" value="{{EventTypeID}}" ng-model="EventTypeID">
                                                    <option value="0">--Select--</option>
                                                    <option ng-repeat="s in EventTypeData" value="{{s.EventTypeID}}" ng-selected="EventTypeID ==s.EventTypeID">{{s.EventType}}</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Event Name<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" value={{EventName}} ng-model="EventName" name="event" class="form-control m-input" required />
                                                <input type="hidden" value="{{EventID}}" />
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row">
                                            <div class="col-xl-6">
                                                <div class="form-group row">
                                                    <label for="example-text-input" class="col-xl-4 col-lg-4 col-md-2 col-form-label">Start Date<span class="required-star" style="color:red">*</span></label>
                                                    <div class="col-xl-8 col-lg-8">
                                                        <div class="input-group date">
                                                            @*<input type="text" class="form-control" id="m_datepicker_1" readonly placeholder="Select date" />*@
                                                            <input type="text" class="form-control m-input" autocomplete="off" placeholder="Selectdate" id="m_datepicker_1" ng-model="StartDate" value="{{StartDate}}" />
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">
                                                                    <i class="la la-calendar-check-o"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-6">
                                                <div class="form-group row">
                                                    <label for="example-text-input" class="col-xl-4 col-lg-4 col-md-2 col-form-label">Till Date<span class="required-star" style="color:red">*</span></label>
                                                    <div class="col-xl-8 col-lg-8">                                                     
                                                        <div class="input-group date">
                                                            <input type="text" class="form-control m-input-gr" autocomplete="off" placeholder="Selectdate" id="m_datepicker_2" ng-model="EndDate" value="{{EndDate}}" />
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">
                                                                    <i class="la la-calendar-check-o"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="m-portlet__foot">
                                        <div class="row m-0 justify-content-end">
                                            <button class="btn btn-primary" ng-show="btnSave" ng-model="Save" ng-click="Add(EventID,EventTypeID,EventName)">
                                                <i class="fa fa-save"> </i>   Save
                                            </button>

                                            <button class="btn btn-primary" ng-show="btnUpdate" ng-model="Update" ng-click="AddUpdate(EventID,EventTypeID,EventName)">
                                                <i class="fa fa-save"> </i>   Update
                                            </button>
                                            <button class="btn btn-secondary" ng-click="Clear()">
                                                <i class="fa fa-times"> </i>  Cancel
                                            </button>
                                        </div>
                                    </div>
                                    @*</form>*@

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Portlet-->

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Event Master
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <select class="form-control" ng-model="btnactive" ng-change="Initialize()">
                                        <option ng-selected="true" value="1">Active</option>
                                        <option value="0">Deactive</option>
                                    </select>
                                </li>
                                <li class="m-portlet__nav-item">
                                    <a href="javascript:void(0);" ng-click="ShowHideSave()" class="btn btn-outline-info m-btn m-btn--icon">
                                        <span>
                                            <i class="la la-plus"></i>
                                            <span>Add Event</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="row d-block m-0 mt-1">

                            <p style="color:red">{{msg}}</p>
                            <!--begin: Datatable -->
                            <table class="table table-striped- table-bordered table-hover table-checkable" id="section_table_view">
                                <thead>
                                    <tr>
                                        @*<th>Board Id</th>*@
                                        <th>Event Type</th>
                                        <th>Event Name</th>
                                        <th>StartDate</th>
                                        <th>EndDate</th>
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="data in EventData">

                                        <td>
                                            {{data.EventType}}
                                        </td>
                                        <td>
                                            {{data.EventName}}
                                        </td>
                                        <td>
                                            {{data.StartDate}}
                                        </td>
                                        <td>
                                            {{data.EndDate}}
                                        </td>

                                        <td>

                                            <a class="edit-icon" ng-click="ShowHide(data.EventID)" data-toggle="m-tooltip" title="Edit"><i class="la la-edit"></i></a>
                                            @*<input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.ModuleId)" />*@
                                        </td>
                                        <td>
                                            <span class="m-switch m-switch--icon m-switch--danger">
                                                <label>
                                                    <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.Status}}" ng-click="Delete(data.EventID)">
                                                    <span></span>
                                                </label>
                                            </span>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
