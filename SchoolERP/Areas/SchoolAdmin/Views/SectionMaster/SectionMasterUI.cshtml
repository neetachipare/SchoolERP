
@{
    ViewBag.Title = "SectionMasterUI";
    Layout = "~/Areas/SchoolAdmin/Views/Shared/LayoutPage.cshtml";
}

<html>
<body ng-app="ERP">
    @using System.Configuration;
    <div ng-controller="SectionController">
        <form id="frmCRUD" name="form" class="m-form m-form--fit m-form--label-align-right" ng-init="Initialize()">

            <div class="m-content">
                <div ng-show="MainDiv">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--begin::Portlet-->
                            <div class="m-portlet m-portlet--accent m-portlet--head-solid-bg m-portlet--head-sm" m-portlet="true" id="m_portlet_tools_1">
                                <div class="m-portlet__head">
                                    <div class="m-portlet__head-caption">
                                        <div class="m-portlet__head-title">
                                            <h3 class="m-portlet__head-text">
                                                Section Master
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="m-portlet__head-tools">
                                        <ul class="m-portlet__nav">
                                            <li class="m-portlet__nav-item">
                                                <a href="#" m-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon"><i class="la la-angle-down"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row d-block m-0 mt-1 form-block-wrapper">

                                 
                                    <div class="m-portlet__body">

                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Section Name<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" ng-model="SectionName" value="{{data.SectionName}}" name="type" class="form-control m-input" autocomplete="off" required />
                                                <input type="hidden" value="{{SectionId}}" ng-model="SectionId" />
                                            </div>
                                        </div>


                                    </div>

                                    <div class="m-portlet__foot">
                                        <div class="row m-0 justify-content-end">
                                            <button class="btn btn-primary" ng-show="btnSave" ng-model="Save" ng-click="Add(SectionName)">
                                                <i class="fa fa-save"> </i>   Save
                                            </button>

                                            <button class="btn btn-primary" ng-show="btnUpdate" ng-model="Update" ng-click="Update(SectionId,SectionName)">
                                                <i class="fa fa-save"> </i>   Update
                                            </button>
                                            <button class="btn btn-secondary" ng-click="Clear()">
                                                <i class="fa fa-times"> </i>  Cancel
                                            </button>
                                        </div>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Portlet-->

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Section Master
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <select class="form-control" ng-model="btnactive" ng-change="Initialize()">
                                        <option ng-selected="true" value="1">Active</option>
                                        <option value="0">Deactive</option>
                                    </select>
                                </li>
                                <li class="m-portlet__nav-item">
                                    <a href="javascript:void(0);" ng-click="ShowHideSave()" class="btn btn-outline-info m-btn m-btn--icon">
                                        <span>
                                            <i class="la la-plus"></i>
                                            <span>Add Section</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="row d-block m-0 mt-1">

                            <p style="color:red">{{msg}}</p>
                            <!--begin: Datatable -->
                            <table class="table table-striped- table-bordered table-hover table-checkable" id="section_table_view">
                                <thead>
                                    <tr>
                                        <th>Section Name</th>
                                       

                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="data in SectionData">

                                        <td>
                                            {{data.SectionName}}
                                        </td>
                                       
                                        <td>

                                            <a class="edit-icon" data-toggle="m-tooltip" title="Edit" ng-click="SingleValue(data.SectionId,data.SectionName)"><i class="la la-edit"></i></a>
                                            @*<input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.ModuleId)" />*@
                                        </td>
                                        <td>
                                            <span class="m-switch m-switch--icon m-switch--danger">
                                                <label>
                                                    <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.Status}}" ng-click="Delete(data.SectionId,data.SectionName)">
                                                    <span></span>
                                                </label>
                                            </span>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/SectionMaster/SectionModule.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/CommonScript/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Scripts/ProjectScripts/SectionMaster/SectionController.js")"></script>
    <script src="~/Content/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script>
                var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>

</body>
</html>

